/* id card */
.name_view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  word-break: keep-all;
  margin-right: 25%;
}

#btn_view {
  display: flex;
  flex-direction: row;
}

.btn {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  flex-shrink: 1;
  flex-basis: 0;
  text-align: center;
  width: auto;
  height: auto;
  margin-top: 5%;
}

.btn_msg {
  margin-top: 5%;
  margin-right: 7%;
  margin-bottom: 5%;
}

/* list */

.list {
  display: flex;
  flex-direction: column;
  padding: 5%;
}

.list_item {
  display: flex;
  flex-direction: row;
}

.list_item text {
  margin-bottom: 16px;
}

.list_item van-image {
  margin-top: 6px;
}

.listDivLine {
  background: #E0E3DA;
  width: 100%;
  height: 5rpx;
  opacity: 0.5;
  margin-bottom: 1%;
}

